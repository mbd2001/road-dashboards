# Use an official Python runtime as a parent image
FROM python:3.10-slim

# Set the working directory to /app
WORKDIR /app/road_dashboards/road_eval_dashboard

# Copy the current directory contents into the container at /app
COPY ./road_dashboards/road_eval_dashboard /app/road_dashboards/road_eval_dashboard

RUN chmod 777 -R /app

RUN pip config --user set  global.index-url https:``//artifactory``.sddc.mobileye.com``/artifactory/api/pypi/pypi/simple &&  \
    pip config --user set  search.index https:``//artifactory``.sddc.mobileye.com``/artifactory/api/pypi/pypi/simple


# pip installations
RUN pip install --upgrade pip
RUN pip install -r /app/road_dashboards/road_eval_dashboard/requirements.txt

ENV PYTHONPATH=/app
ENV AWS_STS_REGIONAL_ENDPOINTS=regional
ENV DEBUG=false
USER root

# Make port 6007 available to the world outside this container
EXPOSE 6007

# Run app.py when the container launches
CMD ["python", "app.py"]
